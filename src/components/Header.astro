---
import HeaderLink from './HeaderLink.astro'
import { SITE_TITLE } from '../consts'
import GH from './icons/Github.astro'

type Props = { logo: string }

const { logo } = Astro.props
---

<header class='sticky top-0 inset-x-0 print:hidden'>
  <nav>
    <h2>
      <a href='/'>{logo}</a>
    </h2>

    <div class='flex justify-end'>
      <HeaderLink href='/#projects'>Projects</HeaderLink>
      <HeaderLink href='/resume'>Resume</HeaderLink>
      <a href='https://github.com/joshatbond' target='_blank'>
        <span class='sr-only'>View My Github</span>
        <GH />
      </a>
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .social-links,
  .social-links a {
    display: flex;
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>
